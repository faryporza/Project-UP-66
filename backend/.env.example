# Server Configuration
HOST=0.0.0.0
PORT=8000

# Model Configuration
MODEL_PATH=models/best.pt
CONFIDENCE_THRESHOLD=0.5
IOU_THRESHOLD=0.45

# Video Source Configuration
# For webcam, use: 0, 1, 2, etc.
# For video file, use: /path/to/video.mp4
# For RTSP stream, use: rtsp://username:password@ip:port/stream
VIDEO_SOURCE=0

# Video Processing
FRAME_WIDTH=640
FRAME_HEIGHT=480
FPS=30

# Line Crossing Configuration
# Line position as percentage of frame height (0.0 to 1.0)
LINE_Y_PERCENT=0.5
# Margin in pixels for crossing detection
CROSSING_MARGIN=5

# Streaming Configuration
JPEG_QUALITY=80
STREAM_FPS=15

# Worker Configuration
WORKER_ENABLED=true
